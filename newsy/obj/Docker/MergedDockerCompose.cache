services:
  newsy.db:
    container_name: newsy_db
    environment:
      POSTGRES_DB: newsy_data_f
      POSTGRES_PASSWORD: postgres
      POSTGRES_USER: postgres
    image: postgres:13.2
    ports:
    - published: 5432
      target: 5432
    volumes:
    - C:\src\poc-newsy\newsy\db:/var/lib/postgresql/data:rw
  newsy.web:
    build:
      context: C:\src\poc-newsy\newsy
      dockerfile: api/Dockerfile
    container_name: newsy_web
    depends_on:
      newsy.db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: api
    ports:
    - published: 5000
      target: 80
    - target: 80
    - published: 5001
      target: 443
    - target: 443
    volumes:
    - C:\Users\Ivan.Golovic\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Ivan.Golovic\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  pgadmin:
    container_name: pgadmin4_container
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@admin.com
      PGADMIN_DEFAULT_PASSWORD: root
    image: dpage/pgadmin4
    ports:
    - published: 5050
      target: 80
    restart: always
version: '3.4'