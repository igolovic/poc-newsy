services:
  newsy.db:
    container_name: newsy_db
    environment:
      POSTGRES_DB: newsy_data
      POSTGRES_PASSWORD: postgres
      POSTGRES_USER: postgres
    image: postgres:13.2
    ports:
    - published: 5432
      target: 5432
    volumes:
    - C:\src\poc-newsy\newsy\db:/var/lib/postgresql/data:rw
  newsy.web:
    build:
      context: C:\src\poc-newsy\newsy
      dockerfile: api/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: api
      target: base
    container_name: newsy_web
    depends_on:
      newsy.db:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: api:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net6.0/api.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 5000
      target: 80
    - target: 80
    - published: 5001
      target: 443
    - target: 443
    tty: true
    volumes:
    - C:\src\poc-newsy\newsy\api:/app:rw
    - C:\Users\Ivan.Golovic\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\Ivan.Golovic\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Ivan.Golovic\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Users\Ivan.Golovic\.nuget\packages:/root/.nuget/packages:ro
    - C:\src\poc-newsy\newsy:/src:rw
  pgadmin:
    container_name: pgadmin4_container
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@admin.com
      PGADMIN_DEFAULT_PASSWORD: root
    image: dpage/pgadmin4
    ports:
    - published: 5050
      target: 80
    restart: always
version: '3.4'